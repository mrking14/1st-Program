#include <stdio.h>

#include <stdlib.h>

void main()

{

   int num1;

   int num2;

      char op;

         int result;

   printf("enter the first value:");

      scanf("%d",&num1);

   printf("enter the operation:");

      scanf(" %c",&op);

   printf("enter the second value:");

      scanf("%d",&num2);

   switch(op)

      {

         case'+':

             result=num1+num2;

                 printf("result:%d",result);

                     break;

    case'-':

        result=num1-num2;

            printf("result:%d",result);

                break;

    case'*':

        result=num1*num2;

            printf("result:%d",result);

                break;

    case'/':

        result=num1/num2;

             printf("result:%d",result);

                 break;

    default:

            printf("result:invalid operation");

   }

    return 0;

    }
